<div class="mt-5">
    <div class="col-4 m-auto">
        <div class="card card-body text-center">
            <h3><i class="fas fa-sign-in-alt"></i>     Login</h3>
            <%- include ('partials/messages') %>
            <form action="/users/login" method="POST">
                <div class="mb-3 text-start">
                    <label for="email" class="form-label ">Email ID</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email id">
                </div>
                <div class="mb-3 text-start">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
                </div>
                <div class="mb-3 text-start">
                    <button type="submit" class="btn btn-danger" style="width: 100%;">Login</button>
                </div>
            </form>
            <div class="text-start">
                <p class="lead">Dont't have an account?<a href="/users/register">Register</a></p>
            </div>
        </div>
    </div>
</div>